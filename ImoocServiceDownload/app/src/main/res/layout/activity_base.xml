<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BaseActivity">

    <Button
        android:id="@+id/btnMainActivity"
        android:text="单线程断电续传下载"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="SingleThreaded"/>
    <Button
        android:id="@+id/btnSecondMainActivity"
        android:text="多线程断电续传下载"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="MultiThreaded"/>

</LinearLayout>